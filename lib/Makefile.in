LIBS = $(EFENCE)

LIBOBJECTS = header.o oldrpmdb.o misc.o messages.o falloc.o
LIBRPM = librpm.a

all: test dump

# -----------------------------------------------------------------------

AR = ar r
RANLIB = ranlib

CFLAGS = $(WARNINGS) $(DEBUG) $(OPTS)
LDFLAGS = $(DEBUG) $(LIBS)

test: librpm.a
	$(CC) -o $@ test.c librpm.a $(LIBS)

dump: librpm.a
	$(CC) -o $@ dump.c librpm.a $(LIBS)

$(LIBRPM): $(LIBOBJECTS) 
	$(AR) $@ $(LIBOBJECTS)
	$(RANLIB) $@

clean:
	rm -f *.a *.o *~ test dump test.out
