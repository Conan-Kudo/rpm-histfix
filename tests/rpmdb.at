AT_SETUP([rpm --initdb])
AT_CHECK([
rpm --initdb -r "${abs_builddir}"/testing
status=$?
AS_IF([test $status -ne 0],[
  AS_IF([test `id -u` -ne 0],
    [exit 77])
])
exit $status;
],
[0],
[ignore],
[ignore])
AT_CLEANUP
